{
  "description": "Bringing device APIs (like WebUSB) to all browsers",
  "manifest_version": 2,
  "version": "0.0.1",
  "icons": {
    "48": "icons/USB_icon.svg"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "d4ab.github.io",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/USB_icon.svg"
  },

  "permissions": ["nativeMessaging"]
}